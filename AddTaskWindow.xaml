<Window x:Class="WpfAppTasktodolist.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTasktodolist"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="450" Width="400">
    <Grid>
        <Label Content="Название задачи:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="taskTitleTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,10,0"/>
        <CheckBox x:Name="CompletedCheckBox" Content="Выполнено" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Checked="CompletedCheckBox_Checked" Unchecked="CompletedCheckBox_Unchecked"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Сохранить" Click="SaveButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Background="#CCFFCC"/>
            <Button Content="Отмена" Click="CancelButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="70,0,10,10" Background="#FFCCCC"          />
        </StackPanel>
    </Grid>
    <Window.Background>
        <SolidColorBrush Color="#FFFFCC"/>
    </Window.Background>

</Window>
